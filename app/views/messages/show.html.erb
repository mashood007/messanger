<div class="container" >
  <div class='row'>
    <div class="col-sm-2">Title</div>
    <div class="col-sm-10"><%= @message.title %></div>
  </div>
  <div class='row'>
    <div class="col-sm-2">Send By</div>
    <div class="col-sm-10"><%= @message.sender.name.camelize %></div>
  </div>
  <div class='row'>
    <div class="col-sm-2">Send To</div>
    <div class="col-sm-10"><%= @message.receiver.name.camelize %></div>
  </div>
  <div class='row'>
    <div class="col-sm-2">Send On</div>
    <div class="col-sm-10"><%= @message.created_at.strftime("%d/%m/%Y %I:%M%p") %></div>
  </div>
  <div class="row">
    <div class='col-sm-2'>Content</div>
    <div class="col-sm-10"><%= @message.content %></div>
  </div>
</div>


